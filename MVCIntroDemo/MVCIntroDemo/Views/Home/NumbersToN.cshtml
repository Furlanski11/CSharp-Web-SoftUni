@{
	ViewBag.Title = "Nums 1 ... " + ViewBag.Count;
}

<h2>@ViewBag.Title</h2>

<ul>
	@for (int i = 1; i <= ViewBag.Count; i++)
	{
		<li>@i</li>
	}	
</ul>

<label for="limitInput">Input Limit</label>
<input type="number" id="limitInput" value="11" />
<button class="btn btn-danger" onclick="SetLimit()">Get Limited Numbers</button>

@section Scripts {
	<script src="~/js/numbers.js"></script>
}